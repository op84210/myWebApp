@{
    ViewData["Title"] = "首頁";
}

<div class="search-container">
    <!-- 上方搜尋條件區塊 -->
    <div class="search-top">
        <form id="searchForm" class="form-inline row g-3">
            <div class="form-group col-md-6">
                <div class="row">
                    <label for="reportDate" class="form-label">申報日期</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="applyStartDate" name="applyStartDate" placeholder="民國年月日 例：1130701" maxlength="7" pattern="\d{7}" title="請輸入7碼數字，如1130701">
                    </div>
                    <div class="col-md-1 d-flex align-items-center justify-content-center">
                        <span class="date-range-sep">~</span>
                    </div>
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="applyEndDate" name="applyEndDate" placeholder="民國年月日 例：1130701" maxlength="7" pattern="\d{7}" title="請輸入7碼數字，如1130701">
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="row">
                    <label for="finishDate" class="form-label">完成日期</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="completionStartDate" name="completionStartDate" placeholder="民國年月日 例：1130701" maxlength="7" pattern="\d{7}" title="請輸入7碼數字，如1130701">
                    </div>
                    <div class="col-md-1 d-flex align-items-center justify-content-center">
                        <span class="date-range-sep">~</span>
                    </div>
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="completionEndDate" name="completionEndDate" placeholder="民國年月日 例：1130701" maxlength="7" pattern="\d{7}" title="請輸入7碼數字，如1130701">
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="depart_code" class="form-label">使用單位</label>
                <select class="form-control form-select" id="depart_code" name="depart_code">
                    <option value="">請選擇</option>
                    @foreach (var item in ViewBag.Departments as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="problem_type" class="form-label">問題類別</label>
                <select class="form-control form-select" id="problem_type" name="problem_type">
                    <option value="">請選擇</option>
                    @foreach (var item in ViewBag.problemTypes as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="processing_staff_id" class="form-label">處理人員</label>
                <select class="form-control form-select" id="processing_staff_id" name="processing_staff_id">
                    <option value="">請選擇</option>
                    @foreach (var item in ViewBag.processingStaffIds as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="processing_type" class="form-label">處理類別</label>
                <select class="form-control form-select" id="processing_type" name="processing_type">
                    <option value="">請選擇</option>
                    @foreach (var item in ViewBag.processingTypes as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-12 mt-2 text-end">
                <button type="submit" class="btn btn-primary">搜尋</button>
            </div>
        </form>
    </div>
    <div class="col-md-12 mt-2 text-end">
        <button id="addBtn" class="btn btn-primary">新增</button>
    </div>

    <!-- 下方搜尋結果區塊 -->
    <div class="search-bottom">
        <div id="searchResults">
            <!-- 這裡會顯示搜尋結果 -->
        </div>
    </div>
    <nav aria-label="分頁導航" class="mt-3">
        <ul class="pagination justify-content-center" id="pagination">
            <!-- 分頁按鈕會由 JS 動態產生 -->
        </ul>
    </nav>
</div>

<script src="~/js/common.js"></script>
<script src="~/js/index.js"></script>