@{
    ViewData["Title"] = "首頁";
}

<div class="search-container">
    <!-- 上方搜尋條件區塊 -->
    <div class="search-top">
        <form id="searchForm" class="form-inline row g-3">
            <div class="form-group col-md-6">
                <label for="reportDate" class="form-label">申報日期</label>
                <input type="date" class="form-control" id="reportDate" name="reportDate">
            </div>
            <div class="form-group col-md-6">
                <label for="finishDate" class="form-label">完成日期</label>
                <input type="date" class="form-control" id="finishDate" name="finishDate">
            </div>
            <div class="form-group col-md-6">
                <label for="department" class="form-label">使用單位</label>
                <input type="text" class="form-control" id="department" name="department" placeholder="請輸入單位">
            </div>
            <div class="form-group col-md-6">
                <label for="issueType" class="form-label">問題類別</label>
                <input type="text" class="form-control" id="issueType" name="issueType" placeholder="請輸入問題類別">
            </div>
            <div class="form-group col-md-6">
                <label for="handler" class="form-label">處理人員</label>
                <input type="text" class="form-control" id="handler" name="handler" placeholder="請輸入處理人員">
            </div>
            <div class="form-group col-md-6">
                <label for="handleType" class="form-label">處理類別</label>
                <input type="text" class="form-control" id="handleType" name="handleType" placeholder="請輸入處理類別">
            </div>
            <div class="form-group col-md-12 mt-2">
                <button type="submit" class="btn btn-primary">搜尋</button>
            </div>
        </form>
    </div>

    <!-- 下方搜尋結果區塊 -->
    <div class="search-bottom">
        <div id="searchResults">
            <!-- 這裡會顯示搜尋結果 -->
        </div>
    </div>
</div>